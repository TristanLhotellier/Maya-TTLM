
{% extends 'base.html.twig' %}


{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
    <div class="col-md-10 contenu-blanc">

        <h1>Les <span> {{  lesproduits | length }}  </span>Produits</h1>
        {{ include('messages.html.twig') }}
        <div class="contenu">
            <table class="table table-striped table-advance table-hover">
                <thead>
                <tr class="bg-entete">
                    <th>identifiant</th>
                    <th>Libellé</th>
                    <th>Prix</th>
                    <th>Date de création</th>
                    <th>Catégorie</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>

                <!-- formulaire pour ajouter une nouvelle catégorie-->
                <tr>
                    {{ form_start(formCreation) }}
                        <td class="col-md-1">Nouveau</td>
                        <td class="col-md-1">{{ form_widget(formCreation.libelle) }}  {{ form_errors(formCreation.libelle) }}</td>
                        <td class="col-md-1">{{ form_widget(formCreation.prix) }}  {{ form_errors(formCreation.prix) }}</td>
                        <td class="col-md-3">{{ form_widget(formCreation.dateCreation) }}  {{ form_errors(formCreation.dateCreation) }}</td>
                        <td class="col-md-3">{{ form_widget(formCreation.categorie) }}  {{ form_errors(formCreation.categorie) }}</td>
                        <td class="col-md-3"><button class="btn btn-primary btn-sm" type="submit" formaction="{{ path('produit_ajouter') }}" title="Enregistrer nouveau produit"><i class="fa fa-save"></i> Enregistrer</button>
                            <button class="btn btn-info btn-sm" type="reset" title="Effacer la saisie"><i class="fa fa-eraser"></i> Annuler </button></td>
                        {# Ceci va générer le champ CSRF #}
                        {{ form_rest(formCreation) }}
                    {{ form_end(formCreation) }}
                </tr>


                {% for key, produit in lesproduits %}
                    <tr>

                               {% if produit.id != idproduitModif %}
                            <td>{{ produit.id }}</td>
                            <td>{{ produit.libelle }}</td>
                            <td>{{ produit.prix }}</td>
                            <td>{{ produit.dateCreation |date('d-m-y') }}</td>
                             <td>{{ produit.categorie }}</td>
                            <!-- formulaire pour demander la modification ou la suppression -->
                            <td><form>
                                    <button type="submit" class="btn btn-primary btn-sm" formaction="{{ path('produit_demandermodification', {'id' : produit.id }) }}" title="Modifier"><i class="fa fa-pencil"></i> Modifier</button>
                                    <button class="btn btn-danger btn-sm" type="submit" formaction="{{ path('produit_supprimer', {'id' : produit.id }) }}" title="Supprimer" onclick="return confirm('Voulez-vous vraiment supprimer ce produit ?');"><i class="fa fa-trash-o "></i> Supprimer</button>
                                <input type = "hidden" name="_token" value="{{ csrf_token('action-item' ~ produit.id) }}">     {#  ~     pour concaténer des chaines en twig #}
                                </form>
                            </td>

                            {% else %}

           <!-- formulaire pour modifier une catégorie -->
           {{ form_start(formModification) }}
           <td>{{ produit.id }}</td>
           <td>{{ form_widget(formModification.libelle) }} {{ form_errors(formModification.libelle) }}</td>
           <td>{{ form_widget(formModification.prix) }} {{ form_errors(formModification.prix) }}</td>
           <td>{{ form_widget(formModification.dateCreation) }} {{ form_errors(formModification.dateCreation) }}</td>
           <td class="col-md-4">
               <button class="btn btn-primary btn-sm" type="submit" formaction="{{ path('produit_modifier', {'id' : produit.id }) }}"  title="Enregistrer"><i class="fa fa-save"></i> Enregistrer</button>
               <button class="btn btn-info btn-sm" type="reset" title="Effacer la saisie"><i class="fa fa-eraser"></i> Effacer</button>
               <button class="btn btn-warning btn-sm" type="submit" formaction="{{ path('produit') }}" title="Annuler"><i class="fa fa-undo"></i> Annuler</button>
           </td>
           {# Ceci va générer le champ CSRF #}
           {{ form_rest(formModification) }}
           {{ form_end(formModification) }}

       {% endif %}
 
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div> <!--fin div contenu-->
    </div> <!--fin div col-md-6-->
{% endblock %}