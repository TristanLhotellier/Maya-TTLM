{% extends 'base.html.twig' %}

{% block title %}fonction{% endblock %}

{% block body %}
<div class="col-md-8 contenu-blanc">

        <h1>Les <span> {{  lesFonctions | length }}  </span>Fonctions</h1>
        {{ include('messages.html.twig') }}
        <div class="contenu">
            <table class="table table-striped table-advance table-hover">
                <thead>
                <tr class="bg-entete">
                    <th>libellé</th>
                    <th>Nombre employé</th>
                    <th>Salaire minimum</th>
                    <th>Salaire maximum</th>
                </tr>
                </thead>
                <tbody>

                {% for key, lesFonctions in lesFonctions %}
                    <tr>
                            <td>{{ lesFonctions.LibFonction }}</td>
                            <td>{{ lesFonctions.nbEmploye }}</td>
                            <td>{{ lesFonctions.MinSalaire | number_format(2, ',' , ' ') }}</td>
                            <td>{{ lesFonctions.maxSalaire | number_format(2, ',' , ' ')}}</td>
                           
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div> <!--fin div contenu-->
    </div> <!--fin div col-md-6-->
{% endblock %}
